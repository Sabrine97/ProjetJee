<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd%22%3E">

<hibernate-mapping>
   <class name = "com.fr.projetjee.persistence.entities.ArticleEntity" table = "article">

      <meta attribute = "class-description">
         This class contains the article detail. 
      </meta>

      <id name = "id" type = "int" column = "id">
         <generator class="identity"/>
      </id>

     
      <property name = "nom" column = "nom" type = "string" not-null="true"/>
      <property name = "expDate" column = "expDate" type = "date"/>
      <property name = "fabDate" column = "fabDate" type = "date"/>
      <property name = "quantity" column = "quantity" type = "int"/>
      <property name = "prix" column = "prix" type = "double"/>

   </class>
</hibernate-mapping>