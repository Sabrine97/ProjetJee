<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd%22%3E
<hibernate-configuration>
   <session-factory>
      <property name="hibernate.dialect">
        ${spring.jpa.properties.hibernate.dialect}
      </property>
      <property name="hibernate.connection.driver_class">
         ${spring.jpa.properties.hibernate.driver}
      </property>
      <!-- Assume test is the database name -->
      <property name="hibernate.connection.url">
         ${spring.datasource.url}
      </property>
      <property name="hibernate.connection.username">
         ${spring.datasource.username}
      </property>
      <property name="hibernate.connection.password">
         ${spring.datasource.password}
      </property>
      <property name="connection.url">${spring.datasource.url}</property>
      <!-- List of XML mapping files -->
      <mapping resource = "article.hbm.xml"/>
   </session-factory>
</hibernate-configuration>